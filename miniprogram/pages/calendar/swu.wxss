/* 日历 */
.myReport-calendar {
  width: 100%;
  height: 650rpx;
  margin-top: 0rpx;
  margin-bottom: 30rpx;
  position: relative;
}

.calendar {
  position: absolute;
  top: 10rpx;
  left: 0;
  right: 0;
  bottom: 0;
  margin: 0 auto;
}

.today .day {
  width: 100%;
  height: 100%;
  margin: 0 auto;
  text-align: center;
}

.today text {
  display: block;
  width: 60rpx;
  text-align: center;
  line-height: 60rpx;
  color: #fff;
  background: #00c8be;
  border-radius: 100rpx;
}

.selectDate {
  padding-bottom: 20rpx;
  text-align: center;
}

.date-wrap {
  font-size: 32rpx;
  font-weight: 600;
  color: #232323;
}

.week {  /*月历第一行 星期*/
  display: flex;
  align-items: center;
  justify-content: space-around;
  padding: 30rpx;
  color: #990505;
  font-weight: 800;
  font-size: 28rpx;
}

.date-box {
  font-size: 0;
  padding: 10rpx 35rpx 35rpx 10rpx; 
  margin: 0 auto;
}

.date-box>view {
  position: relative;
  display: inline-block;
  /*width: 14.285%; 日历正文每格的宽度 100/7=14.285*/ 
  width: 12.5%;
  color: #333;
  text-align: center;
  vertical-align: middle;
  padding-bottom: 30rpx;
  /*border: 1px rgb(29, 8, 8) solid;*/
}

.date-head {  /*月历正文的字体大小*/
  height: 60rpx;
  line-height: 9px;
  font-size: 28rpx;
  margin: 0 0;
  padding: 0 0;
}

.date-head text{  /*月历事件的字体大小*/ 
  font-size: 9px;
  color:rgb(161, 35, 73);
  /*margin: 0px 0px;*/
  /*padding: 0rpx 0rpx;*/
  line-height:0%;
}

.nowDay .date-head {
  width: 60rpx;
  border-radius: 50%; /*圆角*/
  text-align: center;
  color: #fff;
  background-color: #659CD1;
  margin: 0 auto;
}

.nowDay .date-head:hover {
  background: linear-gradient(to bottom right, #009899, #659CD1);
}

